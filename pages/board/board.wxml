<view class='container'>
  <view class='slide'>
    <swiper indicator-dots='true' autoplay='true' interval='8000' duration='1000'>
      <block wx:for="{{ imgUrls }}">
        <swiper-item>
          <image src='{{ item }}' class='slide-image' mode='aspectFill'></image>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='board'></view>
</view>